{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "TJPA RPA SEEU",
  "description": "Automatização de funcionalidades no SEEU.",
  "icons": {
    "16": "assets/img/robot.png",
    "48": "assets/img/robot.png",
    "128": "assets/img/robot.png"
  },
  "action": {
    "default_title": "RPA SEEU",
    "default_popup": "pages/popup.html"
  },
  "options_page": "pages/options.html",
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.seeuintegra.pje.jus.br/*"
      ],
      "js": [
        "assets/js/base.js",
        "assets/js/adicionar-botoes-automacao.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
}
