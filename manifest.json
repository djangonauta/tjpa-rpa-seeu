{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "TJPA RPA SEEU",
  "description": "Automatização de funcionalidades no SEEU.",
  "icons": {
    "16": "assets/img/robot.png",
    "48": "assets/img/robot.png",
    "128": "assets/img/robot.png"
  },
  "action": {
    "default_title": "RPA SEEU",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.seeuintegra.pje.jus.br/*"
      ],
      "js": [
        "modulos/state.js",
        "modulos/base.js",
        "modulos/automacoes.js",
        "main.js"
      ],
      "type": "module",
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
